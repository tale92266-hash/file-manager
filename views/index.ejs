<!DOCTYPE html>
<html lang="hi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>üì± Terminal File Manager</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/mobile.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>
    
    <div class="app-container">
        <%- include('partials/sidebar') %>
        
        <main class="main-content">
            <!-- Breadcrumb Navigation -->
            <div class="breadcrumb-container">
                <div class="breadcrumb">
                    <span onclick="navigateToPath('/')" class="breadcrumb-item">üè†</span>
                    <% pathSegments.forEach((segment, index) => { %>
                        <span class="separator">/</span>
                        <span onclick="navigateToPath('<%= pathSegments.slice(0, index + 1).join('/') %>')" 
                              class="breadcrumb-item"><%= segment %></span>
                    <% }); %>
                </div>
                <div class="path-actions">
                    <button onclick="toggleHidden()" class="btn-icon" id="hideToggle">
                        <i class="fas fa-eye"></i>
                    </button>
                    <button onclick="refreshFiles()" class="btn-icon">
                        <i class="fas fa-sync"></i>
                    </button>
                </div>
            </div>

            <!-- File List -->
            <div class="file-grid" id="fileGrid">
                <% if (currentPath !== '/') { %>
                <div class="file-item directory" onclick="navigateToPath('<%= parentPath %>')">
                    <div class="file-icon">üìÅ</div>
                    <div class="file-info">
                        <div class="file-name">..</div>
                        <div class="file-meta">Parent Directory</div>
                    </div>
                </div>
                <% } %>

                <% files.forEach(file => { %>
                <div class="file-item <%= file.isDirectory ? 'directory' : 'file' %> <%= file.isHidden ? 'hidden-file' : '' %>" 
                     data-path="<%= file.fullPath %>" 
                     onclick="<%= file.isDirectory ? 'navigateToPath(\'' + file.fullPath + '\')' : 'openFileEditor(\'' + file.fullPath + '\', \'' + file.name + '\')' %>">
                    <div class="file-icon"><%= file.icon %></div>
                    <div class="file-info">
                        <div class="file-name"><%= file.name %></div>
                        <div class="file-meta">
                            <span class="file-size"><%= file.size %></span>
                            <span class="file-date"><%= file.modified %></span>
                        </div>
                    </div>
                    <div class="file-actions">
                        <button onclick="event.stopPropagation(); showContextMenu(event, '<%= file.fullPath %>', '<%= file.name %>')" class="btn-icon">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                    </div>
                </div>
                <% }); %>
            </div>
        </main>

        <!-- Code Editor Modal -->
        <div id="editorModal" class="modal">
            <div class="modal-content">
                <div class="editor-header">
                    <div class="editor-title">
                        <i class="fas fa-code"></i>
                        <span id="editorFileName">File Editor</span>
                    </div>
                    <button onclick="closeEditor()" class="btn-close">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                
                <div class="editor-toolbar">
                    <div class="toolbar-left">
                        <button onclick="saveFile()" class="btn-primary">
                            <i class="fas fa-save"></i> Save
                        </button>
                        <button onclick="closeEditor()" class="btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </button>
                    </div>
                    <div class="toolbar-right">
                        <button onclick="clearEditor()" class="btn-danger">
                            <i class="fas fa-trash"></i> Clear
                        </button>
                        <button onclick="pasteClipboard()" class="btn-info">
                            <i class="fas fa-paste"></i> Paste
                        </button>
                    </div>
                </div>

                <textarea id="codeEditor" placeholder="Enter your code here..."></textarea>
                
                <div class="editor-status">
                    <span id="editorStatus">Ready</span>
                    <span id="lineCount">Lines: 1</span>
                </div>
            </div>
        </div>

        <!-- Context Menu -->
        <div id="contextMenu" class="context-menu">
            <div class="menu-item" onclick="renameFile()">
                <i class="fas fa-edit"></i> Rename
            </div>
            <div class="menu-item" onclick="deleteFile()">
                <i class="fas fa-trash"></i> Delete
            </div>
            <div class="menu-item" onclick="copyPath()">
                <i class="fas fa-copy"></i> Copy Path
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    
    <script src="/js/main.js"></script>
    <script src="/js/editor.js"></script>
</body>
</html>
