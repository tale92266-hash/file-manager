<!DOCTYPE html>
<html lang="hi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Terminal File Manager</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet"/>

    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/mobile.css" />
</head>
<body>
    <button class="sidebar-toggle" onclick="toggleSidebar()">
        <i class="bi bi-list"></i>
    </button>

    <aside class="sidebar" id="sidebar" aria-label="Sidebar navigation">
        <div class="sidebar-section">
            <h3>Quick Access</h3>
            <nav>
                <ul>
                    <li><a href="#" onclick="navigateToPath('/')"><i class="bi bi-house"></i> Home</a></li>
                    <li><a href="#" onclick="navigateToPath('/tmp')"><i class="bi bi-folder"></i> Temp</a></li>
                    <li><a href="#" onclick="navigateToPath('/home/user')"><i class="bi bi-person"></i> User</a></li>
                </ul>
            </nav>
        </div>
        <div class="sidebar-section">
            <h3>File Types</h3>
            <nav>
                <ul>
                    <li><a href="#" id="filterAll"><i class="bi bi-file-earmark"></i> All Files</a></li>
                    <li><a href="#" id="filterCode"><i class="bi bi-laptop-code"></i> Code Files</a></li>
                    <li><a href="#" id="filterImages"><i class="bi bi-image"></i> Images</a></li>
                    <li><a href="#" id="hideToggle"><i class="bi bi-eye-slash"></i> Hidden</a></li>
                </ul>
            </nav>
        </div>
        <div class="sidebar-section">
            <h3>Terminal Info</h3>
            <div>
                <strong>Current Path:</strong>
                <code id="currentPathDisplay"><%= currentPath %></code>
            </div>
            <div>
                <strong>Files Count:</strong>
                <span id="fileCount"><%= files.length %></span>
            </div>
        </div>
    </aside>
    <header class="app-header">
        <h1>
            <i class="bi bi-terminal"></i>
            Terminal File Manager
        </h1>
        <div class="header-actions">
            <button class="btn-primary" onclick="showCreateModal()">
                <i class="bi bi-plus-lg"></i> New
            </button>
            <button class="btn-secondary" onclick="showUploadModal()">
                <i class="bi bi-upload"></i> Upload
            </button>
        </div>
    </header>

    <main class="main-content">
        <nav aria-label="breadcrumb" class="breadcrumb">
            <a href="#" onclick="navigateToPath('/')"><i class="bi bi-house"></i></a>
            <% pathSegments.forEach(function(segment, idx) { %>
                <span class="separator">/</span>
                <a href="#" onclick="navigateToPath('<%= pathSegments.slice(0, idx + 1).join('/') %>')"><%= segment %></a>
            <% }); %>
        </nav>

        <div class="file-grid" id="fileGrid" role="list" aria-label="List of files and folders">
            <% if(currentPath !== '/') { %>
                <div class="file-item directory" role="listitem" onclick="navigateToPath('<%= parentPath %>')">
                    <i class="bi bi-folder"></i>
                    <span class="file-name">..</span>
                    <div class="file-meta">Parent Directory</div>
                    <div class="file-actions">
                        <button class="btn-icon" aria-label="Options"><i class="bi bi-three-dots-vertical"></i></button>
                    </div>
                </div>
            <% } %>

            <% files.forEach(function(file) { %>
                <div class="file-item <%= file.isDirectory ? 'directory' : 'file' %> <%= file.isHidden ? 'hidden-file' : '' %>" 
                     role="listitem" 
                     data-path="<%= file.fullPath %>" 
                     onclick="<%= file.isDirectory ?
'navigateToPath(\'' + file.fullPath + '\')' : 'openFileEditor(\'' + file.fullPath + '\', \'' + file.name + '\')' %>">
                    <i class="<%= file.isDirectory ? 'bi bi-folder' : 'bi bi-file-earmark' %>"></i>
                    <span class="file-name"><%= file.name %></span>
                    <div class="file-meta">
                        <span><%= file.size %></span> â€¢ <span><%= file.modified %></span>
                    </div>
                    <div class="file-actions">
                        <button class="btn-icon" aria-label="Options"><i class="bi bi-three-dots-vertical"></i></button>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script src="/js/main.js"></script>
    <script src="/js/editor.js"></script>

</body>
</html>
