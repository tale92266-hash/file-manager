<div id="editorModal" class="modal">
    <div class="modal-content full-screen">
        <div class="editor-header">
            <h3 class="editor-title" id="editorTitle"></h3>
            <div class="header-actions">
                <button id="closeEditorButton" class="btn-icon">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        
        <textarea id="codeEditor" class="code-editor-area"></textarea>

        <div class="editor-footer">
            <div class="footer-actions">
                <button id="clearAllButton" class="btn-danger">
                    <i class="fas fa-eraser"></i> Clear All
                </button>
                <button id="pasteButton" class="btn-info">
                    <i class="fas fa-paste"></i> Paste
                </button>
            </div>
            <div class="footer-actions">
                <button id="saveFileButton" class="btn-primary">
                    <i class="fas fa-save"></i> Save
                </button>
                <button id="cancelButton" class="btn-secondary">
                    <i class="fas fa-ban"></i> Cancel
                </button>
            </div>
        </div>
    </div>
</div>
