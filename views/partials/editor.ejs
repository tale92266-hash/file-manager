<div id="editorModal" class="modal">
    <div class="modal-content full-screen">
        <div class="editor-header">
            <div class="editor-title-container">
                <h3 class="editor-title" id="editorTitle"></h3>
                <span id="unsavedChangesStar" class="unsaved-changes-star">*</span>
            </div>
            <div class="header-actions">
                <span id="editorLineCount" class="editor-info">Lines: 0</span>
                <button id="saveFileButton" class="btn-icon btn-save" aria-label="Save">
                    <i class="fas fa-save"></i>
                </button>
                <button id="closeEditorButton" class="btn-icon">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        
        <textarea id="codeEditor" class="code-editor-area"></textarea>

        <div class="editor-footer">
            <div class="footer-actions">
                <button id="clearAllButton" class="btn btn-danger" aria-label="Clear All">
                    <i class="fas fa-eraser"></i>
                </button>
                <button id="selectAllButton" class="btn btn-info" aria-label="Select All">
                    <i class="fas fa-arrows-alt"></i>
                </button>
                <button id="copyButton" class="btn btn-info" aria-label="Copy">
                    <i class="fas fa-copy"></i>
                </button>
                <button id="cutButton" class="btn btn-info" aria-label="Cut">
                    <i class="fas fa-cut"></i>
                </button>
                <button id="pasteButton" class="btn btn-info" aria-label="Paste">
                    <i class="fas fa-paste"></i>
                </button>
            </div>
        </div>
    </div>
</div>