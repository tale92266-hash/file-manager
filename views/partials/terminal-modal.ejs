<div id="terminalModal" class="modal">
    <div class="modal-content full-screen terminal-modal-content">
        <div class="terminal-header">
            <div class="terminal-title-section">
                <h3 class="terminal-title">
                    <i class="fas fa-terminal"></i>
                    Terminal
                </h3>
            </div>
            <div class="terminal-actions">
                <button id="terminalCtrlCButton" class="btn-icon btn-danger">
                    <i class="fas fa-ban"></i>
                    <span class="btn-text">Ctrl+C</span>
                </button>
                <button id="closeTerminalModal" class="btn-icon btn-close">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        
        <div class="terminal-command-section">
            <div class="terminal-input-container">
                <span id="terminalPrompt" class="terminal-prompt">user@system:~/..path/current$ </span>
                <input type="text" id="terminalInput" class="terminal-input" autofocus placeholder="Type command here..." />
            </div>
        </div>
        
        <div class="terminal-body">
            <pre id="terminalOutput" class="terminal-output"></pre>
        </div>
    </div>
</div>