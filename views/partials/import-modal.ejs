<div id="importModal" class="modal">
    <div class="modal-content small">
        <div class="modal-header">
            <h3>Import from Git</h3>
            <button id="closeImportModal" class="btn-close">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <input type="text" id="repoUrlInput" class="input-field" placeholder="Enter GitHub Repo URL...">
            <div class="button-group">
                <button id="importRepoButton" class="btn-primary">
                    <i class="fas fa-download"></i> Import
                </button>
                <button id="cancelImportButton" class="btn-secondary">
                    <i class="fas fa-ban"></i> Cancel
                </button>
            </div>
        </div>
    </div>
</div>